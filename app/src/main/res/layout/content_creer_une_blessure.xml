<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svCreerUneBlessure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".views.CreerUneBlessureActivity"
        tools:showIn="@layout/activity_creer_une_blessure"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblCoordonneDuPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordonnées du patient"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp" />
        <AutoCompleteTextView
            android:id="@+id/atxtNomPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom du patient"
            android:textSize="24sp"/>
        <AutoCompleteTextView
            android:id="@+id/atxtPrenomPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom du patient"
            android:textSize="24sp"/>
        <AutoCompleteTextView
            android:id="@+id/atxtNomEquipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discipline sportive"
            android:textSize="24sp"/>
        <AutoCompleteTextView
            android:id="@+id/atxtNomEcole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de l'école"
            android:textSize="24sp"/>
        <AutoCompleteTextView
            android:id="@+id/atxtNumeroJoueur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numéro du joueur"
            android:inputType="number"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/lblDateEvenement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de l'événement"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/lblTypeEvenement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Type d'évènement"
            android:textSize="24sp" />
        <Spinner
            android:id="@+id/sTypeEvenement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lblDateDeLaBlessure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Date de la blessure"
            android:textSize="24sp" />
        <DatePicker
            android:id="@+id/dpDateDeLaBlessure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblDateDeRetourEntrainement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Date de retour à l'entraînement"
            android:textSize="24sp" />
        <DatePicker
            android:id="@+id/dpDateDeRetourEntrainement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblDateDeRetourAuJeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Date de retour au jeu"
            android:textSize="24sp" />
        <DatePicker
            android:id="@+id/dpDateDeRetourAuJeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblDescriptionDeLaBlessure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description de la blessure"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/lblRegionAffectee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Région affectée"
            android:textSize="24sp" />
        <Spinner
            android:id="@+id/sRegionAffectee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/regionsAffectees" />
        <TextView
            android:id="@+id/lblPrecisionSurLaRegionAffectee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Précision sur la région affectée"
            android:textSize="24sp" />
        <Spinner
            android:id="@+id/sPrecisionSurLaRegionAffectee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lblDescriptionDetailleeDeLaRegionBlessee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Description détaillée de la région blessée"
            android:textSize="24sp" />
        <LinearLayout
