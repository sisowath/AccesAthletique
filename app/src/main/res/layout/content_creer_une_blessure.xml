        <TextView
            android:id="@+id/lblInformationsSupplementaires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations supplémentaires"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/lblContexteDeLaBlessure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Contexte de la blessure"
            android:textSize="24sp" />
        <Spinner
            android:id="@+id/sContexteDeLaBlessure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lblRestrictionsAthlete"
            android:layout_width="match_parent"
